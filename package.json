{
  "name": "when-to-call",
  "version": "0.0.1",
  "description": "Web app to organise call times during business hours",
  "main": "index.js",
  "repository": "git@github.com:jamesacarr/when-to-call.git",
  "author": "James Carr <james@jacarr.me>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "metrics": "xo --fix",
    "metrics:ci": "xo",
    "precommit": "lint-staged",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci --testResultsProcessor=\"jest-junit\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!coverage/**",
      "!pages/**",
      "!**/*.config.js",
      "!**/*.styles.js"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn metrics",
      "git add",
      "yarn test --findRelatedTests"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120
  },
  "xo": {
    "space": true,
    "prettier": true,
    "extends": "xo-react",
    "parser": "babel-eslint",
    "env": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "overrides": [
      {
        "files": "**/*.spec.js",
        "rules": {
          "max-nested-callbacks": 0
        }
      }
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-runtime": "^6.26.0",
    "htmlescape": "^1.1.1",
    "jss": "^9.8.1",
    "jss-preset-default": "^4.3.0",
    "material-ui": "^1.0.0-beta.41",
    "material-ui-icons": "^1.0.0-beta.36",
    "next": "^5.1.0",
    "now-env": "^3.0.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-jss": "^8.4.0",
    "react-redux": "^5.0.7",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-act": "^1.7.4",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-enzyme": "^6.0.0",
    "jest-junit": "^3.6.0",
    "lint-staged": "^7.0.0",
    "react-test-renderer": "^16.3.1",
    "redux-mock-store": "^1.5.1",
    "xo": "^0.20.3"
  }
}
