{
  "name": "when-to-call",
  "version": "0.0.1",
  "description": "Web app to organise call times during business hours",
  "main": "index.js",
  "repository": "git@github.com:jamesacarr/when-to-call.git",
  "author": "James Carr <james@jacarr.me>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "metrics": "xo --fix",
    "metrics:ci": "xo",
    "test": "jest",
    "test:ci": "jest --ci --testResultsProcessor=\"jest-junit\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!coverage/**",
      "!pages/**",
      "!**/*.config.js",
      "!**/*.styles.js"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "xo": {
    "space": true,
    "extends": "xo-react",
    "parser": "babel-eslint",
    "env": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "rules": {
      "max-len": [
        "error",
        150
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "overrides": [
      {
        "files": "**/*.spec.js",
        "rules": {
          "max-nested-callbacks": 0
        }
      }
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "dotenv": "^5.0.0",
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "material-ui": "^1.0.0-beta.33",
    "material-ui-icons": "^1.0.0-beta.17",
    "next": "^5.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-jss": "^8.3.0",
    "react-redux": "^5.0.6",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "7.2.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.2.2",
    "jest-enzyme": "^4.2.0",
    "jest-junit": "^3.6.0",
    "react-test-renderer": "^16.2.0",
    "xo": "^0.18.2"
  }
}
